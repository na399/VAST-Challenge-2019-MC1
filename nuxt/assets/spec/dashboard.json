{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 800,
  "height": 800,
  "padding": 20,

  "config": {
    "axisBand": {
      "bandPosition": 1,
      "tickExtra": true,
      "tickOffset": 0
    }
  },

  "signals": [
    {
      "name": "indexTime",
      "update": "time('Apr 6 2020')",
      "on": [
        {
          "events": "@timeInTimeline:mousemove",
          "update": "round(invert('x', clamp(x(), 0, width)) / 300000) * 300000"
        },
        {
          "events": "timer{600}",
          "update": "TimelineControl == 'Play' ? indexTime + 300000 : indexTime"
        }
      ]
    },
    { "name": "maxDate", "update": "time('Apr 11 2020')" },
    {
      "name": "TimelineControl",
      "value": "Play",
      "bind": {
        "input": "radio",
        "options": ["Play", "Pause"]
      }
    },
    {
      "name": "SelectCategory",
      "value": "shake_intensity",
      "bind": {
        "input": "select",
        "options": [
          "shake_intensity",
          "medical",
          "power",
          "sewer_and_water",
          "buildings",
          "roads_and_bridges"
        ]
      }
    }
  ],

  "data": [
    {
      "name": "shake_intensity",
      "url": "data/shake_intensity_summary_processed.csv",
      "format": {
        "type": "csv",
        "parse": {
          "time": "date",
          "time_end": "date"
        }
      }
    },
    {
      "name": "medical",
      "url": "data/medical_summary_processed.csv",
      "format": {
        "type": "csv",
        "parse": {
          "time": "date",
          "time_end": "date"
        }
      }
    },
    {
      "name": "power",
      "url": "data/power_summary_processed.csv",
      "format": {
        "type": "csv",
        "parse": {
          "time": "date",
          "time_end": "date"
        }
      }
    },
    {
      "name": "sewer_and_water",
      "url": "data/sewer_and_water_summary_processed.csv",
      "format": {
        "type": "csv",
        "parse": {
          "time": "date",
          "time_end": "date"
        }
      }
    },
    {
      "name": "buildings",
      "url": "data/buildings_summary_processed.csv",
      "format": {
        "type": "csv",
        "parse": {
          "time": "date",
          "time_end": "date"
        }
      }
    },
    {
      "name": "roads_and_bridges",
      "url": "data/roads_and_bridges_summary_processed.csv",
      "format": {
        "type": "csv",
        "parse": {
          "time": "date",
          "time_end": "date"
        }
      }
    },
    {
      "name": "allSummary",
      "source": [
        "shake_intensity",
        "medical",
        "power",
        "sewer_and_water",
        "buildings",
        "roads_and_bridges"
      ]
    },
    {
      "name": "selectedCategorySummary",
      "source": "allSummary",
      "transform": [
        { "type": "filter", "expr": "datum.cat == SelectCategory" }
      ]
    },
    {
      "name": "timepoints",
      "transform": [
        {
          "type": "sequence",
          "start": 1586131200000,
          "stop": 1586563200000,
          "step": 300000,
          "as": "time"
        }
      ]
    }
  ],

  "marks": [
    {
      "type": "group",
      "name": "ErrorBarChart",
      "description": "MAP with CI",
      "encode": {
        "enter": {
          "height": { "value": 600 },
          "width": { "value": 800 }
        }
      },
      "data": [
        {
          "name": "selectedCategorySummary",
          "source": "selectedCategorySummary",
          "transform": [
            {
              "type": "filter",
              "expr": "datum.time == indexTime"
            }
          ]
        }
      ],
      "scales": [
        {
          "name": "yscale",
          "type": "band",
          "range": [0, 600],
          "domain": {
            "data": "selectedCategorySummary",
            "field": "loc",
            "sort": {
              "op": "max",
              "field": "hdi95\\.lower",
              "order": "descending"
            }
          }
        },
        {
          "name": "xscale",
          "type": "linear",
          "range": "width",
          "round": true,
          "domain": [0, 10],
          "zero": false,
          "nice": true
        }
      ],
      "axes": [
        { "orient": "top", "scale": "xscale", "zindex": 1, "title": "Rating" },
        { "orient": "left", "scale": "yscale", "tickCount": 5, "zindex": 1 }
      ],
      "marks": [
        {
          "type": "rect",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "fill": { "value": "hsl(0, 0%, 90%)" },
              "height": { "value": 20 }
            },
            "update": {
              "yc": { "scale": "yscale", "field": "loc", "band": 0.5 },
              "x": { "scale": "xscale", "field": "hdi95\\.lower" },
              "x2": { "scale": "xscale", "field": "hdi95\\.upper" }
            }
          }
        },
        {
          "type": "rect",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "fill": { "value": "hsl(0, 0%, 70%)" },
              "height": { "value": 20 }
            },
            "update": {
              "yc": { "scale": "yscale", "field": "loc", "band": 0.5 },
              "x": { "scale": "xscale", "field": "hdi90\\.lower" },
              "x2": { "scale": "xscale", "field": "hdi90\\.upper" }
            }
          }
        },
        {
          "type": "rect",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "fill": { "value": "hsl(0, 0%, 50%)" },
              "height": { "value": 20 }
            },
            "update": {
              "yc": { "scale": "yscale", "field": "loc", "band": 0.5 },
              "x": { "scale": "xscale", "field": "hdi50\\.lower" },
              "x2": { "scale": "xscale", "field": "hdi50\\.upper" }
            }
          }
        },
        {
          "type": "symbol",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "shape": { "value": "stroke" },
              "angle": { "value": 90 },
              "strokeWidth": { "value": 5 }
            },
            "update": {
              "xc": { "scale": "xscale", "field": "MAP" },
              "yc": { "scale": "yscale", "field": "loc", "band": 0.5 },
              "stroke": [
                {
                  "test": "datum.MAP <= 2",
                  "value": "hsl(203, 50%, 71%)"
                },
                {
                  "test": "datum.MAP <= 4",
                  "value": "hsl(44, 100%, 78%)"
                },
                {
                  "test": "datum.MAP <= 6",
                  "value": "hsl(19, 97%, 67%)"
                },
                {
                  "test": "datum.MAP <= 8",
                  "value": "hsl(3, 69%, 50%)"
                },
                { "value": "hsl(3, 78%, 19%)" }
              ],
              "size": [
                { "test": "datum.in15min == 1", "value": 1000 },
                { "value": 250 }
              ],
              "strokeDash": [
                { "test": "datum.over60min == 1", "value": [4, 2] },
                { "value": [1, 0] }
              ]
            }
          }
        }
      ]
    },
    {
      "type": "group",
      "name": "timeline",
      "encode": {
        "enter": {
          "height": { "value": 30 },
          "width": { "value": 800 },
          "y": { "value": 650 }
        }
      },
      "data": [
        {
          "name": "selectedCategorySummary",
          "source": "selectedCategorySummary"
        }
      ],
      "scales": [
        {
          "name": "x",
          "type": "time",
          "domain": { "data": "selectedCategorySummary", "field": "time" },
          "range": "width",
          "nice": true
        }
      ],
      "axes": [{ "orient": "bottom", "scale": "x", "grid": false }],
      "marks": [
        {
          "type": "rule",
          "name": "timeInTimeline",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "x": { "scale": "x", "field": "time" },
              "y": { "value": 0 },
              "y2": { "field": { "group": "height" } },
              "stroke": { "value": "steelblue" },
              "opacity": { "value": 0.1 }
            }
          }
        },
        {
          "type": "rule",
          "encode": {
            "update": {
              "x": { "scale": "x", "signal": "indexTime", "offset": 0.5 },
              "y": { "value": 0 },
              "y2": { "field": { "group": "height" } },
              "stroke": { "value": "firebrick" }
            }
          }
        },
        {
          "type": "text",
          "encode": {
            "update": {
              "x": { "scale": "x", "signal": "indexTime" },
              "y": { "value": 0, "offset": -5 },
              "align": { "value": "center" },
              "text": { "signal": "timeFormat(indexTime, '%x %H:%M')" },
              "fill": { "value": "firebrick" }
            }
          }
        }
      ]
    }
  ]
}
