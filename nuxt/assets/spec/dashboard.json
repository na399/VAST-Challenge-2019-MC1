      "type": "group",
      "name": "ErrorBarChart",
      "description": "MAP with CI",
      "encode": {
        "enter": {
          "width": { "value": 600 },
          "height": { "value": 700 },
          "x": { "value": 840 },
          "y": { "value": 0 }
        }
      },
      "data": [
        {
          "name": "selectedCategorySummary",
          "source": "selectedCategorySummary",
          "transform": [
            {
              "type": "filter",
              "expr": "datum.time == indexTime"
            }
          ]
        }
      ],
      "scales": [
        {
          "name": "yscale",
          "type": "band",
          "range": [0, 700],
          "domain": {
            "data": "selectedCategorySummary",
            "field": "loc",
            "sort": {
              "op": "max",
              "field": { "signal": "SortOption" },
              "order": "descending"
            }
          }
        },
        {
          "name": "xscale",
          "type": "linear",
          "range": [0, 800],
          "round": true,
          "domain": [0, 10],
          "zero": false,
          "nice": true
        }
      ],
      "axes": [
        {
          "orient": "top",
          "scale": "xscale",
          "zindex": 1,
          "title": "Rating",
          "labelFontSize": 14
        },
        {
          "orient": "left",
          "scale": "yscale",
          "tickCount": 5,
          "zindex": 1,
          "title": "Neighborhood",
          "labelFontSize": 14
        }
      ],
      "marks": [
        {
          "name": "colorScale",
          "type": "rect",
          "from": { "data": "colourThreshold" },
          "encode": {
            "enter": {
              "x": { "scale": "xscale", "field": "start" },
              "x2": { "scale": "xscale", "field": "end" },
              "y": { "value": -5 },
              "y2": { "value": 0 },
              "fill": { "scale": "cscale", "field": "start" }
            }
          }
        },
        {
          "name": "LocationNameLabel",
          "type": "text",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "align": { "value": "right" }
            },
            "update": {
              "text": [
                {
                  "test": "datum['hdi95\\.lower'] > 2",
                  "field": "locName"
                },
                { "value": "" }
              ],
              "y": { "scale": "yscale", "field": "loc", "band": 0.5 },
              "x": {
                "scale": "xscale",
                "signal": "datum['hdi95\\.lower'] - 0.1"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "fill": { "value": "hsl(0, 0%, 90%)" },
              "height": { "value": 6 }
            },
            "update": {
              "yc": { "scale": "yscale", "field": "loc", "band": 0.5 },
              "x": { "scale": "xscale", "field": "hdi95\\.lower" },
              "x2": { "scale": "xscale", "field": "hdi95\\.upper" }
            }
          }
        },
        {
          "type": "rect",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "fill": { "value": "hsl(0, 0%, 85%)" },
              "height": { "value": 10 }
            },
            "update": {
              "yc": { "scale": "yscale", "field": "loc", "band": 0.5 },
              "x": { "scale": "xscale", "field": "hdi90\\.lower" },
              "x2": { "scale": "xscale", "field": "hdi90\\.upper" }
            }
          }
        },
        {
          "type": "rect",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "fill": { "value": "hsl(0, 0%, 80%)" },
              "height": { "value": 14 }
            },
            "update": {
              "yc": { "scale": "yscale", "field": "loc", "band": 0.5 },
              "x": { "scale": "xscale", "field": "hdi50\\.lower" },
              "x2": { "scale": "xscale", "field": "hdi50\\.upper" }
            }
          }
        },
        {
          "type": "symbol",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "shape": { "value": "circle" },
              "strokeWidth": { "value": 3 }
            },
            "update": {
              "xc": { "scale": "xscale", "field": "MAP" },
              "yc": { "scale": "yscale", "field": "loc", "band": 0.5 },
              "fill": { "scale": "cscale", "field": "MAP" },
              "stroke": [
                {
                  "test": "datum.in15min == 1",
                  "scale": "cscaleDark",
                  "field": "MAP"
                }
              ],
              "size": [
                {
                  "test": "datum.in15min == 1",
                  "value": 200
                },
                { "value": 150 }
              ]
            }
          }
        },
        {
          "type": "symbol",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "xc": { "scale": "xscale", "field": "MAP" },
              "yc": { "scale": "yscale", "field": "loc", "band": 0.5 },
              "opacity": { "value": 0.8 },
              "size": { "value": 50 },
              "fill": [
                { "test": "datum.over60min == 1", "value": "hsl(0, 0%, 80%)" }
              ]
            }
          }
        }
      ]
    },
    {
      "type": "group",
      "name": "timeline",
      "encode": {
        "enter": {
          "height": { "value": 30 },
          "width": { "value": 800 },
          "y": { "value": 670 }
        }
      },
      "data": [
        {
          "name": "selectedCategorySummary",
          "source": "selectedCategorySummary"
        }
      ],
      "scales": [
        {
          "name": "xTime",
          "type": "time",
          "domain": { "data": "selectedCategorySummary", "field": "time" },
          "range": [0, 800],
          "nice": true
        }
      ],
      "axes": [{ "orient": "bottom", "scale": "xTime", "grid": false }],
      "marks": [
        {
          "type": "rule",
          "name": "timeInTimeline",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "x": { "scale": "xTime", "field": "time" },
              "y": { "value": 0 },
              "y2": { "field": { "group": "height" } },
              "stroke": { "value": "hsl(0, 0%, 80%)" },
              "opacity": { "value": 0.1 }
            }
          }
        },
        {
          "type": "rule",
          "encode": {
            "update": {
