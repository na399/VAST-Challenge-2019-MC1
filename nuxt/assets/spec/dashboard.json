{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 800,
  "height": 800,
  "padding": 20,

  "config": {
    "axisBand": {
      "bandPosition": 1,
      "tickExtra": true,
      "tickOffset": 0
    }
  },

  "signals": [
    {
      "name": "indexTime",
      "update": "time('Apr 6 2020')",
      "on": [
        {
          "events": "@timeInTimeline:mousemove",
          "update": "round(invert('x', clamp(x(), 0, width)) / 300000) * 300000"
        },
        {
          "events": "timer{600}",
          "update": "TimelineControl == 'Play' ? indexTime + 300000 : indexTime"
        }
      ]
    },
    { "name": "maxDate", "update": "time('Apr 11 2020')" },
    {
      "name": "TimelineControl",
      "value": "Play",
      "bind": {
        "input": "radio",
        "options": ["Play", "Pause"]
      }
    },
    {
      "name": "SelectCategory",
      "value": "shake_intensity",
      "bind": {
        "input": "select",
        "options": [
          "shake_intensity",
          "medical",
          "power",
          "sewer_and_water",
          "buildings",
          "roads_and_bridges"
        ]
      }
    },
    {
      "name": "SortOption",
      "value": "hdi95\\.lower",
      "bind": {
        "input": "select",
        "options": ["hdi95\\.lower", "hdi90\\.lower", "hdi50\\.lower", "MAP"]
      }
    }
  ],

  "data": [
    {
      "name": "locNames",
      "values": [
        { "loc": "1", "name": "PALACE HILLS" },
        { "loc": "2", "name": "NORTHWEST" },
        { "loc": "3", "name": "OLD TOWN" },
        { "loc": "4", "name": "SAFE TOWN" },
        { "loc": "5", "name": "SOUTHWEST" },
        { "loc": "6", "name": "DOWNTOWN" },
        { "loc": "7", "name": "WILSON FOREST" },
        { "loc": "8", "name": "SCENIC VISTA" },
        { "loc": "9", "name": "BROADVIEW" },
        { "loc": "10", "name": "CHAPPARAL" },
        { "loc": "11", "name": "TERRAPIN" },
        { "loc": "12", "name": "PEPPER MILL" },
        { "loc": "13", "name": "CHEDDARFORD" },
        { "loc": "14", "name": "EASTON" },
        { "loc": "15", "name": "WESTON" },
        { "loc": "16", "name": "SOUTHTON" },
        { "loc": "17", "name": "OAK WILLOW" },
        { "loc": "18", "name": "EAST PARTON" },
        { "loc": "19", "name": "WEST PARTON" }
      ]
    },
    {
      "name": "colourThreshold",
      "values": [
        { "start": 0, "end": 2 },
        { "start": 2, "end": 4 },
        { "start": 4, "end": 6 },
        { "start": 6, "end": 8 },
        { "start": 8, "end": 10 }
      ]
    },
    {
      "name": "shake_intensity",
      "url": "data/shake_intensity_summary_processed.csv",
      "format": {
        "type": "csv",
        "parse": {
          "time": "date",
          "time_end": "date"
        }
      }
    },
    {
      "name": "medical",
      "url": "data/medical_summary_processed.csv",
      "format": {
        "type": "csv",
        "parse": {
          "time": "date",
          "time_end": "date"
        }
      }
    },
    {
      "name": "power",
      "url": "data/power_summary_processed.csv",
      "format": {
        "type": "csv",
        "parse": {
          "time": "date",
          "time_end": "date"
        }
      }
    },
    {
      "name": "sewer_and_water",
      "url": "data/sewer_and_water_summary_processed.csv",
      "format": {
        "type": "csv",
        "parse": {
          "time": "date",
          "time_end": "date"
        }
      }
    },
    {
      "name": "buildings",
      "url": "data/buildings_summary_processed.csv",
      "format": {
        "type": "csv",
        "parse": {
          "time": "date",
          "time_end": "date"
        }
      }
    },
    {
      "name": "roads_and_bridges",
      "url": "data/roads_and_bridges_summary_processed.csv",
      "format": {
        "type": "csv",
        "parse": {
          "time": "date",
          "time_end": "date"
        }
      }
    },
    {
      "name": "allSummary",
      "source": [
        "shake_intensity",
        "medical",
        "power",
        "sewer_and_water",
        "buildings",
        "roads_and_bridges"
      ]
    },
    {
      "name": "selectedCategorySummary",
      "source": "allSummary",
      "transform": [{ "type": "filter", "expr": "datum.cat == SelectCategory" }]
    },
    {
      "name": "timepoints",
      "transform": [
        {
          "type": "sequence",
          "start": 1586131200000,
          "stop": 1586563200000,
          "step": 300000,
          "as": "time"
        }
      ]
    }
  ],

  "marks": [
    {
      "type": "group",
      "name": "ErrorBarChart",
      "description": "MAP with CI",
      "encode": {
        "enter": {
          "height": { "value": 600 },
          "width": { "value": 800 }
        }
      },
      "data": [
        {
          "name": "selectedCategorySummary",
          "source": "selectedCategorySummary",
          "transform": [
            {
              "type": "filter",
              "expr": "datum.time == indexTime"
            }
          ]
        }
      ],
      "scales": [
        {
          "name": "yscale",
          "type": "band",
          "range": [0, 600],
          "domain": {
            "data": "selectedCategorySummary",
            "field": "loc",
            "sort": {
              "op": "max",
              "field": { "signal": "SortOption" },
              "order": "descending"
            }
          }
        },
        {
          "name": "xscale",
          "type": "linear",
          "range": "width",
          "round": true,
          "domain": [0, 10],
          "zero": false,
          "nice": true
        },
        {
          "name": "cscale",
          "type": "threshold",
          "range": [
            "hsl(203, 50%, 71%)",
            "hsl(44, 100%, 78%)",
            "hsl(19, 97%, 67%)",
            "hsl(3, 69%, 50%)",
            "hsl(3, 78%, 19%)"
          ],
          "domain": [2, 4, 6, 8, 10]
        }
      ],
      "axes": [
        {
          "orient": "top",
          "scale": "xscale",
          "zindex": 1,
          "title": "Rating",
          "labelFontSize": 14
        },
        {
          "orient": "left",
          "scale": "yscale",
          "tickCount": 5,
          "zindex": 1,
          "title": "Neighborhood",
          "labelFontSize": 14
        }
      ],
      "marks": [
        {
          "name": "colorScale",
          "type": "rect",
          "from": { "data": "colourThreshold" },
          "encode": {
            "enter": {
              "x": { "scale": "xscale", "field": "start" },
              "x2": { "scale": "xscale", "field": "end" },
              "y": { "value": -5 },
              "y2": { "value": 0 },
              "fill": { "scale": "cscale", "field": "start" }
            }
          }
        },
        {
          "name": "Location Name Label",
          "type": "text",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "align": { "value": "right" }
            },
            "update": {
              "text": [
                {
                  "test": "datum['hdi95\\.lower'] > 2",
                  "field": "locName"
                },
                { "value": "" }
              ],
              "y": { "scale": "yscale", "field": "loc", "band": 0.5 },
              "x": {
                "scale": "xscale",
                "signal": "datum['hdi95\\.lower'] - 0.1"
              }
            }
          }
        },
        {
          "type": "rect",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "fill": { "value": "hsl(0, 0%, 90%)" },
              "height": { "value": 20 }
            },
            "update": {
              "yc": { "scale": "yscale", "field": "loc", "band": 0.5 },
              "x": { "scale": "xscale", "field": "hdi95\\.lower" },
              "x2": { "scale": "xscale", "field": "hdi95\\.upper" }
            }
          }
        },
        {
          "type": "rect",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "fill": { "value": "hsl(0, 0%, 70%)" },
              "height": { "value": 20 }
            },
            "update": {
              "yc": { "scale": "yscale", "field": "loc", "band": 0.5 },
              "x": { "scale": "xscale", "field": "hdi90\\.lower" },
              "x2": { "scale": "xscale", "field": "hdi90\\.upper" }
            }
          }
        },
        {
          "type": "rect",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "fill": { "value": "hsl(0, 0%, 50%)" },
              "height": { "value": 20 }
            },
            "update": {
              "yc": { "scale": "yscale", "field": "loc", "band": 0.5 },
              "x": { "scale": "xscale", "field": "hdi50\\.lower" },
              "x2": { "scale": "xscale", "field": "hdi50\\.upper" }
            }
          }
        },
        {
          "type": "symbol",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "shape": { "value": "stroke" },
              "angle": { "value": 90 },
              "strokeWidth": { "value": 5 }
            },
            "update": {
              "xc": { "scale": "xscale", "field": "MAP" },
              "yc": { "scale": "yscale", "field": "loc", "band": 0.5 },
              "stroke": [
                {
                  "test": "datum.MAP <= 2",
                  "value": "hsl(203, 50%, 71%)"
                },
                {
                  "test": "datum.MAP <= 4",
                  "value": "hsl(44, 100%, 78%)"
                },
                {
                  "test": "datum.MAP <= 6",
                  "value": "hsl(19, 97%, 67%)"
                },
                {
                  "test": "datum.MAP <= 8",
                  "value": "hsl(3, 69%, 50%)"
                },
                { "value": "hsl(3, 78%, 19%)" }
              ],
              "size": [
                { "test": "datum.in15min == 1", "value": 1000 },
                { "value": 250 }
              ],
              "strokeDash": [
                { "test": "datum.over60min == 1", "value": [4, 2] },
                { "value": [1, 0] }
              ]
            }
          }
        }
      ]
    },
    {
      "type": "group",
      "name": "timeline",
      "encode": {
        "enter": {
          "height": { "value": 30 },
          "width": { "value": 800 },
          "y": { "value": 650 }
        }
      },
      "data": [
        {
          "name": "selectedCategorySummary",
          "source": "selectedCategorySummary"
        }
      ],
      "scales": [
        {
          "name": "x",
          "type": "time",
          "domain": { "data": "selectedCategorySummary", "field": "time" },
          "range": "width",
          "nice": true
        }
      ],
      "axes": [{ "orient": "bottom", "scale": "x", "grid": false }],
      "marks": [
        {
          "type": "rule",
          "name": "timeInTimeline",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "x": { "scale": "x", "field": "time" },
              "y": { "value": 0 },
              "y2": { "field": { "group": "height" } },
              "stroke": { "value": "hsl(0, 0%, 80%)" },
              "opacity": { "value": 0.1 }
            }
          }
        },
        {
          "type": "rule",
          "encode": {
            "update": {
              "x": { "scale": "x", "signal": "indexTime", "offset": 0.5 },
              "y": { "value": 0 },
              "y2": { "field": { "group": "height" } },
              "stroke": { "value": "hsl(120, 50%, 30%)" }
            }
          }
        },
        {
          "type": "text",
          "encode": {
            "update": {
              "x": { "scale": "x", "signal": "indexTime" },
              "y": { "value": 0, "offset": -5 },
              "align": { "value": "center" },
              "text": { "signal": "timeFormat(indexTime, '%x %H:%M')" },
              "fill": { "value": "hsl(120, 50%, 30%)" }
            }
          }
        }
      ]
    }
  ]
}
