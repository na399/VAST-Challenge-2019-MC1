{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 800,
  "height": 50,
  "padding": 20,
  "signals": [
    {
      "name": "indexDate",
      "update": "time('Apr 6 2020')",
      "on": [
        {
          "events": "mousemove",
          "update": "round(invert('x', clamp(x(), 0, width)) / 300000) * 300000"
        }
      ]
    },
    {"name": "maxDate", "update": "time('Apr 11 2020')"}
  ],
  "data": [
    {
      "name": "timepoints",
      "transform": [
        {
          "type": "sequence",
          "start": 1586131200000,
          "stop": 1586563200000,
          "step": 300000,
          "as": "time"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "domain": {"data": "timepoints", "field": "time"},
      "range": "width",
      "nice": true
    }
  ],
  "axes": [{"orient": "bottom", "scale": "x", "grid": true}],
  "marks": [
    {
      "type": "rule",
      "from": {"data": "timepoints"},
      "encode": {
        "enter": {
          "x": {"scale": "x", "field": "time"},
          "y": {"value": 0},
          "y2": {"field": {"group": "height"}},
          "stroke": {"value": "navy"}
        }
      }
    },
    {
      "type": "rule",
      "encode": {
        "update": {
          "x": {"scale": "x", "signal": "indexDate", "offset": 0.5},
          "y": {"value": 0},
          "y2": {"field": {"group": "height"}},
          "stroke": {"value": "firebrick"}
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "update": {
          "x": {"scale": "x", "signal": "indexDate"},
          "y": {"value": 0, "offset": -5},
          "align": {"value": "center"},
          "text": {"signal": "timeFormat(indexDate, '%d %H:%M')"},
          "fill": {"value": "firebrick"}
        }
      }
    }
  ]
}
