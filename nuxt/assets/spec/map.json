                { "value": 0 }
              ]
            }
          }
        }
      ]
    },
    {
      "type": "group",
      "name": "timeline",
      "encode": {
        "enter": {
          "height": { "value": 30 },
          "width": { "value": 800 },
          "y": { "value": 680 }
        }
      },
      "data": [
        {
          "name": "selectedCategorySummary",
          "source": "selectedCategorySummary"
        }
      ],
      "scales": [
        {
          "name": "xTime",
          "type": "time",
          "domain": { "data": "selectedCategorySummary", "field": "time" },
          "range": "width",
          "nice": true
        }
      ],
      "axes": [{ "orient": "bottom", "scale": "xTime", "grid": false }],
      "marks": [
        {
          "type": "rule",
          "name": "timeInTimeline",
          "from": { "data": "selectedCategorySummary" },
          "encode": {
            "enter": {
              "x": { "scale": "xTime", "field": "time" },
              "y": { "value": 0 },
              "y2": { "field": { "group": "height" } },
              "stroke": { "value": "hsl(0, 0%, 80%)" },
              "opacity": { "value": 0.1 }
            }
          }
        },
        {
          "type": "rule",
          "encode": {
            "update": {
              "x": { "scale": "xTime", "signal": "indexTime", "offset": 0.5 },
              "y": { "value": 0 },
              "y2": { "field": { "group": "height" } },
              "stroke": { "value": "hsl(120, 50%, 30%)" }
            }
          }
        },
        {
          "type": "text",
          "encode": {
            "update": {
              "x": { "scale": "xTime", "signal": "indexTime" },
              "y": { "value": 0, "offset": -5 },
              "align": { "value": "center" },
              "text": { "signal": "timeFormat(indexTime, '%x %H:%M')" },
              "fill": { "value": "hsl(120, 50%, 30%)" }
            }
          }
        }
      ]
    }
  ]
