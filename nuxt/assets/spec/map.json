              ],
              "stroke": { "scale": "cscale", "field": "MAP" },
              "strokeWidth": [
                { "test": "datum.in15min == 1", "value": 2 },
                { "value": 0 }
              ]
            }
          }
        },
        {
          "type": "rule",
          "from": { "data": "shake_intensity_time" },
          "encode": {
            "enter": {
              "x": { "scale": "xPosNum", "field": "loc", "offset": 0 },
              "x2": { "scale": "xPosNum", "field": "loc", "offset": 12 },
              "y": { "scale": "yPosNum", "field": "loc", "offset": 16 },
              "opacity": { "value": 0.8 },
              "stroke": { "value": "white" },
              "strokeWidth": [
                { "test": "datum.over60min == 1", "value": 2 },
