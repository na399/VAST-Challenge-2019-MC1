              ]
            }
          }
        },
        {
          "type": "rect",
          "from": { "data": "roads_and_bridges_time" },
          "encode": {
            "enter": {
              "x": { "scale": "xPosNum", "field": "loc", "offset": 30 },
              "y": { "scale": "yPosNum", "field": "loc", "offset": 25 },
              "width": { "value": 12 },
              "height": { "value": 12 },
              "cornerRadius": { "value" : 3 },
              "fill": { "scale": "cscale", "field": "MAP" },
              "fillOpacity": [
                { "test": "datum.in15min == 1", "value": 1 },
